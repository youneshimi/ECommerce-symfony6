{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Adresse</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ adresse.id }}</td>
                </tr>
                <tr>
                    <th>Rue</th>
                    <td>{{ adresse.rue }}</td>
                </tr>
                <tr>
                    <th>CodePostal</th>
                    <td>{{ adresse.codePostal }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ adresse.ville }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ adresse.pays }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_adresse_index') }}" class="btn btn-secondary">Back to list</a>

        <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('adresse/_delete_form.html.twig') }}
    </div>
{% endblock %}
