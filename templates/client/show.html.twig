{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Client</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ client.nom }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ client.email }}</td>
                </tr>
                <tr>
                    <th>Mdp</th>
                    <td>{{ client.mdp }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">back to list</a>

        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">edit</a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
