{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <style>
        /* Ajoutez vos styles personnalis√©s ici */

        /* ... */

        .table {
            margin-top: 20px;
        }

        .table th {
            background-color: #f8f9fa;
            color: #333;
            font-weight: bold;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

        .btn-primary,
        .btn-success {
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Client index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Mdp</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.nom }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.mdp }}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_client_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
