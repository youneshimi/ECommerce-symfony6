{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Produit</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ produit.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
                <tr>
                    <th>Qte</th>
                    <td>{{ produit.qte }}</td>
                </tr>
                <tr>
                    <th>Img</th>
                    <td>{{ produit.img }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to list</a>

        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
